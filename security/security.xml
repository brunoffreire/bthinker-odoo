<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record model="ir.module.category" id="user_type">
		<field name="name">Usuário do Módulo</field>
		<field name="description">Permissão na gestão do Módulo</field>
		<field name="sequence">20</field>
	</record>

	<record id="qrdoor_user" model="res.groups">
		<field name="name">Usuário</field>
		<field name="category_id" ref="user_type"/>
	</record>
	
	<record id="qrdoor_manager" model="res.groups">
		<field name="name">Gerente</field>
		<field name="category_id" ref="user_type"/>
		<field name="implied_ids" eval="[(4, ref('qrdoor_user'))]"/>
		<field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
	</record>

</odoo>
