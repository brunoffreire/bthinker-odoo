<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="portal_visita" name="Página de visita">
		<t t-call="bthinker_qrdoor.portal_layout">
			<t t-set="timestamp" t-value="int(time.time())"/>
			<t t-set="portal_head">
				<link t-att-href="'/bthinker_qrdoor/static/src/css/portal-visita.css?key={}'.format(timestamp)" rel="stylesheet"/>
				<script src="/bthinker_qrdoor/static/src/js/portal-QRReader.js"/>
				<script src="/bthinker_qrdoor/static/src/js/jsQR.min.1.js"/>
				<script t-att-src="'/bthinker_qrdoor/static/src/js/portal-visita.js?key={}'.format(timestamp)"/>
			</t>
			<t t-set="portal_body">
				<div class="container">
					<h3 class="centered">Chave Virtual B-Thinker</h3>
				</div>

				<div class="container">
					<div id="page_0" class="row centered">
						<div class="twelve columns">
							<p class="centered">Utilize a câmera do seu dispositivo para ler o QRCode da porta.</p>
						</div>

						<div id="canvas-container">
							<canvas id="canvas"></canvas>
						</div>
						<div id="mensagem">

						</div>
					</div>					
				</div>
			</t>
		</t>
	</template>
</odoo>
