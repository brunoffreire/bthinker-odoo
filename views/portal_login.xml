<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="portal_login" name="Login">
		<t t-call="bthinker_qrdoor.portal_layout">
			<t t-set="timestamp" t-value="int(time.time())"/>
			<t t-set="portal_head">				
				<script t-att-src="'/bthinker_qrdoor/static/src/js/portal-login.js?key={}'.format(timestamp)"/>				
				<link t-att-href="'/bthinker_qrdoor/static/src/css/portal-login.css?key={}'.format(timestamp)" rel="stylesheet"/>				
			</t>
			<t t-set="body_class" t-value="'bg-white-200'"/>
			<t t-set="portal_body">
				<div class="container">
					<h3 class="centered">Login</h3>
					<form id="form" method="post">
						<div id="row_fields" class="row">
							<div class="twelve columns">
								<label for="username">Nome de Usuário</label>
								<input class="twelve columns" type="text" id="username" placeholder="username" required="1"/>

								<label for="senha">Senha</label>
								<input class="twelve columns" type="password" id="senha" required="1"/>
							</div>
						</div>
						<div id="row_checkbox" class="row">
							<div class="twelve columns">
								<input type="checkbox" id="rememberMe" checked="1"/>
								<span>Mantenha-me conectado neste dispositivo</span>
							</div>
						</div>
						<div id="row_login_button" class="twelve columns centered">
							<button type="button" class="button-primary" id="btn_login">Entrar</button>
							<br/>
							<br/>
							<a href="javascript:void(0);" id="forgot_password">Esqueci minha senha</a>
							<br/>
							<br/>
							Ainda não tem uma conta? <a href="/virtualkey/cadastro">Crie sua conta aqui.</a>
						</div>
					</form>
				</div>
			</t>
		</t>
	</template>
</odoo>
