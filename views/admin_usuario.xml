<odoo>
  <data>
    <record model="ir.ui.view" id="bthinker_qrdoor.usuario_list">
      <field name="name">bthinker.usuario.list</field>
      <field name="model">bthinker.usuario</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nome"/>
          <field name="username"/>
          <field name="tipo"/>
          <field name="email"/>
          <field name="celular"/>
          <field name="state"/>
          <field name="chave_id"/>
          <field name="status_ultimo_login"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="bthinker_qrdoor.usuario_form">
      <field name="name">bthinker.usuario.form</field>
      <field name="model">bthinker.usuario</field>
      <field name="arch" type="xml">
        <form string="Cadastro de Usuario">
          <header>
            <button name="action_send_enroll_mail" string="Enviar e-mail de cadastro" type="object" class="oe_highlight" />
            <field name="state" widget="statusbar" options="{'clickable': True, 'fold_field': 'fold'}" />
          </header>
          <sheet>
            <group col="2">
              <group>
                <separator string="Dados Gerais"/>
                <field name="nome"/>
                <field name="username"/>
                <field name="tipo"/>
                <field name="email"/>
                <field name="celular"/>
                <field name="senha"/>
              </group>
              <group>            
                <separator string="Dados Gerais"/>
                <field name="flag_criar_visita"/>
                <field name="flag_abertura_remota"/>
                <field name="flag_ver_cameras"/>
                <field name="chave_id"/>
                <field name="status_ultimo_login"/>
              </group>
            </group>
            <notebook>
              <page string="Contratos">
                <field name="contrato_ids">
                  <tree string="Contratos do Usuário" delete="false" create="false" edit="false" editable="top" default_order="partner_id">
                    <field name="partner_id"/>
                    <field name="state"/>
                  </tree>
                </field>
              </page>
              <page string="Portas">
                <field name="porta_ids">
                  <tree string="Portas do Usuário" delete="true" create="true" edit="true" editable="top" default_order="contrato_id">
                    <field name="contrato_id"/>
                    <field name="nome"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="bthinker_qrdoor.usuario_action_window">
      <field name="name">Cadastro de Usuário</field>
      <field name="res_model">bthinker.usuario</field>
      <field name="view_mode">tree,form</field>
      <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('bthinker_qrdoor.usuario_list')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('bthinker_qrdoor.usuario_form')})]"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_smiling_face">
              Cadastre o primeiro usuario!
        </p>
      </field>
    </record>

    <record model="mail.template" id="bthinker_qrdoor.base_usuario_mail_template">
      <field name="name">E-Mail Base Usuario</field>
      <field name="model_id" ref="bthinker_qrdoor.model_bthinker_usuario"/>      
      <field name="email_to">{{ object.email }}</field>
      <field name="subject">Asunto</field>      
  </record>  

  <record model="ir.actions.act_window" id="bthinker_qrdoor.convite_usuario_action_window">
    <field name="name">Convites de Cadastro</field>
    <field name="res_model">bthinker.convite_usuario</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_smiling_face">

      </p>
    </field>
  </record>

  <record model="ir.ui.view" id="bthinker_qrdoor.convite_usuario_list">
    <field name="name">bthinker.convite_usuario.list</field>
    <field name="model">bthinker.convite_usuario</field>
    <field name="arch" type="xml">
      <tree>
        <field name="usuario_id"/>
        <field name="contrato_id"/>
        <field name="guid"/>
        <field name="create_date"/>
      </tree>
    </field>
  </record>

  <record model="ir.ui.view" id="bthinker_qrdoor.convite_usuario_form">
    <field name="name">bthinker.convite_usuario.form</field>
    <field name="model">bthinker.convite_usuario</field>
    <field name="arch" type="xml">
      <form string="Convites de Cadastro">
        <sheet>
          <group>            
            <field name="usuario_id"/>
            <field name="contrato_id"/>
            <field name="guid"/>            
            <field name="create_date"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

</data>
</odoo>