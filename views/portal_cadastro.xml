<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="portal_cadastro" name="Cadastro">
		<t t-call="bthinker_qrdoor.page_layout">
			<t t-set="portal_head">
				<script src="/bthinker_qrdoor/static/src/js/portal-cadastro.js?key=%d' % int(time.time())}}"></script>
				<link href="/bthinker_qrdoor/static/src/css/portal-cadastro.css?key=%d' % int(time.time())}}" rel="stylesheet"/>
			</t>
			<t t-set="body_class" t-value="'bg-white-200'"/>
			<t t-set="portal_body">
				<main class="main-content mt-0">
					<div class="main-content position-relative h-100 border-radius-lg ">
						<div class="container-fluid px-2 px-md-4">
							<div class="row d-flex justify-content-center">
								<div class="card-body p-3">

									<div class="col-12 col-xl-4">
										<div class="card card-plain h-100">
											<div class="card-header pb-0 p-3">
												<div class="row">
													<div class="col-md-8 d-flex align-items-center">
														<h6 class="mb-0">Meus Dados</h6>
													</div>
												</div>
											</div>
											<div class="">
												<form role="form" class="text-start">
													<div class="input-group input-group-outline my-3">
														<label class="form-label">Nome de Usu√°rio</label>
														<input id="username_profile" type="text" class="form-control" onfocus="focused(this)" onfocusout="defocused(this)"/>
														<div class="input-group-append">
															<a class="input-group-text mx-3" onclick="checkUsername();" style="z-index:100">
																<i class="fas fa-search"></i>
															</a>
														</div>
													</div>
													<span id="username_message"></span>
													<div class="input-group input-group-outline my-3">
														<label class="form-label">Nome</label>
														<input id="name_profile" type="text" class="form-control" onfocus="focused(this)" onfocusout="defocused(this)"/>
													</div>
													<div class="input-group input-group-outline my-3">
														<label class="form-label">E-Mail</label>
														<input id="email_profile" type="email" class="form-control" onfocus="focused(this)" onfocusout="defocused(this)"/>
													</div>
													<div class="input-group input-group-outline my-3">
														<label class="form-label">Celular</label>
														<input id="mobile_profile" type="phone" class="form-control" onfocus="focused(this)" onfocusout="defocused(this)"/>
													</div>
													<div id="password_div">
														<div class="input-group input-group-outline my-3">
															<label class="form-label">Senha</label>
															<input id="password_profile" type="password" class="form-control" onfocus="focused(this)" onfocusout="defocused(this)"/>
															<div class="input-group-append">
																<a class="input-group-text mx-3" onclick="passwordShowHide(this);" style="z-index:100">
																	<i class="fas fa-eye"></i>
																</a>
															</div>
														</div>
														<div class="input-group input-group-outline my-3">
															<label class="form-label">Confirmar Senha</label>
															<input id="confirm_password_profile" type="password" class="form-control" onfocus="focused(this)" onfocusout="defocused(this)"/>
															<div class="input-group-append">
																<a class="input-group-text mx-3" onclick="passwordShowHide(this);" style="z-index:100">
																	<i class="fas fa-eye"></i>
																</a>
															</div>
														</div>
													</div>
												</form>
											</div>
										</div>
									</div>

									<div class="col-12 col-xl-4">
										<div class="col-auto my-auto bt-flex">
											<div class="align-self-center form-check form-switch ps-0">
												<input class="form-check-input ms-auto bt-margin" type="checkbox" id="terms_agree" checked="" />
											</div>
											<div class="copyright text-lg-start text-sm text-xxs p3"> 
												Estou ciente de que prosseguindo com este cadastro, autorizo a B-Thinker a armazenar e utilizar meus dados pessoais
												aqui fornecidos para os fins aos quais este sistema se destina.												
											</div>

										</div>
										<div class="col-auto my-auto pt-3 w-100">
											<button class="btn btn-success btn-sm mb-0 me-4 w-100" id="btn_save" disable="True">Salvar</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</main>
			</t>
		</t>
	</template>
</odoo>
